<h1 class="dashboard-title">Dashboard</h1>

<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
<div class="count-container">
  <div class="row">
    <div class="col-lg-2 col-sm-6">
      <div class="circle-tile ">
        <div class="circle-tile-heading green"><i class="fa fa-leaf fa-2x" aria-hidden="true"></i></div>
        <div class="circle-tile-content green">
          <div class="circle-tile-description text-faded"> Products </div>
          <div class="circle-tile-number text-faded "><%= @products.count %></div>
          <a class="circle-tile-footer" href="/admin/products">More Info<i class="fa fa-chevron-circle-right"></i></a>
        </div>
      </div>
    </div>
     
    <div class="col-lg-2 col-sm-6">
      <div class="circle-tile ">
        <div class="circle-tile-heading dark-gray"><i class="fa fa-list fa-2x" aria-hidden="true"></i></div>
        <div class="circle-tile-content dark-gray">
          <div class="circle-tile-description text-faded"> Categories </div>
          <div class="circle-tile-number text-faded "><%= @categories.count %></div>
          <a class="circle-tile-footer" href="/admin/products">More Info<i class="fa fa-chevron-circle-right"></i></a>
        </div>
      </div>
    </div> 
  </div> 
</div>  
  
</div>
</div>
